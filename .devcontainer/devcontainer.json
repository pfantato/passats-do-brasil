{
  "dockerComposeFile": "docker-compose.yml",
  "forwardPorts": [3000],
  "name": "[Vagalume] Passats do Brasil",
  "service": "devcontainer",
  "workspaceFolder": "/usr/src/app",

  "settings": {
    "files.autoSave": "afterDelay",
    "editor.fontFamily": "Fira Code, Menlo, Monaco, 'Courier New', monospace",
    "editor.tabSize": 2,
    "editor.wordWrap": "on",
    "editor.inlineHints.fontFamily": "Fira Code, Menlo, Monaco, 'Courier New', monospace",
    "editor.unfoldOnClickAfterEndOfLine": true,
    "editor.wordWrapColumn": 100,
    "editor.cursorSmoothCaretAnimation": true,
    "editor.fontLigatures": true,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.formatOnSaveMode": "modifications",
    "diffEditor.codeLens": true,
    "editor.minimap.renderCharacters": false,
    "files.autoGuessEncoding": true,
    "files.autoSaveDelay": 5000,
    "files.trimTrailingWhitespace": true,
    "workbench.list.smoothScrolling": true,
    "workbench.colorTheme": "Firefly",
    "workbench.preferredDarkColorTheme": "Firefly",
    "workbench.tree.indent": 6,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.revealIfOpen": true,
    "window.autoDetectColorScheme": true,
    "window.closeWhenEmpty": true,
    "window.titleSeparator": " â€¢ ",
    "explorer.incrementalNaming": "smart",
    "search.searchOnTypeDebouncePeriod": 400,
    "search.smartCase": true,
    "debug.allowBreakpointsEverywhere": true,
    "debug.console.closeOnEnd": true,
    "auto-close-tag.SublimeText3Mode": true,
    "cSpell.allowCompoundWords": true,
    "cSpell.language": "pt-BR, en",
    "cSpell.logLevel": "Debug",
    "cSpell.diagnosticLevel": "Hint",
    "react-native-tools.networkInspector.consoleLogsColorTheme": "Dark",
    "liveshare.guestApprovalRequired": true,
    "liveshare.languages.allowGuestCommandControl": true,
    "conventionalCommits.emojiFormat": "emoji",
    "git.autoStash": true,
    "javascriptBooster.logLevel": "verbose",
    "openInGitHub.providerProtocol": "http",
    "turboConsoleLog.quote": "`",
    "terminal.integrated.profiles.linux": {
      "zsh (login)": {
        "path": "zsh",
        "args": ["-l"]
      }
    },
    "terminal.integrated.defaultProfile.linux": "zsh",

    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.minimap.enabled": false,
    "editor.suggestSelection": "first",
    "emmet.includeLanguages": {
      "html": "html",
      "javascript": "javascriptreact"
    },
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

    // Plugins
    "prettier.printWidth": 100,
    "typescript.updateImportsOnFileMove.enabled": "always",
    "javascript.updateImportsOnFileMove.enabled": "always",
    "peacock.affectActivityBar": false,
    "peacock.affectDebuggingStatusBar": true,

    "workbench.colorCustomizations": {
      "statusBar.background": "#1d1d1b",
      "statusBar.foreground": "#e7e7e7",
      "statusBarItem.hoverBackground": "#373734",
      "titleBar.activeBackground": "#1d1d1b",
      "titleBar.activeForeground": "#e7e7e7",
      "titleBar.inactiveBackground": "#1d1d1b99",
      "titleBar.inactiveForeground": "#e7e7e799",
      "statusBar.debuggingBackground": "#1b1b1d",
      "statusBar.debuggingForeground": "#e7e7e7"
    },
    "peacock.color": "#1d1d1b"
  },

  "extensions": [
    "aaron-bond.better-comments",
    "christian-kohler.npm-intellisense",
    "christian-kohler.path-intellisense",
    "coenraads.bracket-pair-colorizer-2",
    "dbaeumer.vscode-eslint",
    "donjayamanne.githistory",
    "eamodio.gitlens",
    "eg2.vscode-npm-script",
    "esbenp.prettier-vscode",
    "formulahendry.auto-close-tag",
    "formulahendry.auto-rename-tag",
    "johnpapa.vscode-peacock",
    "kamikillerto.vscode-colorize",
    "mhutchie.git-graph",
    "mikestead.dotenv",
    "ms-azuretools.vscode-docker",
    "ms-vscode-remote.remote-containers",
    "ms-vscode.vscode-typescript-next",
    "ms-vsliveshare.vsliveshare-audio",
    "ms-vsliveshare.vsliveshare",
    "msjsdiag.debugger-for-chrome",
    "vagalumedev.firefly",
    "pflannery.vscode-versionlens",
    "pranaygp.vscode-css-peek",
    "streetsidesoftware.code-spell-checker-portuguese-brazilian",
    "streetsidesoftware.code-spell-checker",
    "usernamehw.errorlens",
    "vincaslt.highlight-matching-tag",
    "visualstudioexptteam.vscodeintellicode",
    "vscode-icons-team.vscode-icons",
    "wix.vscode-import-cost",
    "yzhang.markdown-all-in-one",
    "ziyasal.vscode-open-in-github",
    "pnp.polacode",
    "github.copilot"
  ]
}
